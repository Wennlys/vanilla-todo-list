{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
      "no-var": "off",
      "no-shadow": "off",
      "prefer-arrow-callback": "off",
      "no-param-reassign": "off",
      "strict": "off",
      "no-use-before-define": "off",
      "vars-on-top": "off",
      "no-restricted-globals": "off",
      "eqeqeq": "off",
      "prefer-const": "off"
    }
}
